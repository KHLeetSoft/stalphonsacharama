<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Dashboard</h1>
      <div class="mb-4">
        <a href="/admin/logo" class="btn btn-primary">Manage School Logo</a>
      </div>
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card bg-primary text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Total Students</h6>
                  <h2 class="mb-0">150</h2>
                </div>
                <i class="fas fa-users fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="card bg-success text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Active Courses</h6>
                  <h2 class="mb-0">12</h2>
                </div>
                <i class="fas fa-book fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="card bg-info text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Announcements</h6>
                  <h2 class="mb-0">5</h2>
                </div>
                <i class="fas fa-bullhorn fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="card-title mb-0">Recent Activities</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  New student registration
                  <span class="badge bg-primary rounded-pill">2h ago</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Course schedule updated
                  <span class="badge bg-primary rounded-pill">5h ago</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  New announcement posted
                  <span class="badge bg-primary rounded-pill">1d ago</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
              <div class="d-grid gap-2">
                <a href="/admin/students/new" class="btn btn-primary">
                  <i class="fas fa-user-plus me-2"></i>Add New Student
                </a>
                <a href="/admin/courses/new" class="btn btn-success">
                  <i class="fas fa-plus-circle me-2"></i>Create Course
                </a>
                <a href="/admin/announcements/new" class="btn btn-info text-white">
                  <i class="fas fa-bullhorn me-2"></i>Post Announcement
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
