<%- include('../partials/header') %>
<div class="container mt-4">
  <h2>Our Teachers</h2>
  <div class="row">
    <% teachers.forEach(teacher => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if (teacher.image) { %>
        <img
          src="<%= teacher.image %>"
          class="card-img-top"
          alt="<%= teacher.name %>"
          style="height: 250px; object-fit: cover"
        />
        <% } else { %>
        <div class="card-img-top bg-light text-center py-5">
          <i class="fas fa-user-graduate fa-4x text-secondary"></i>
        </div>
        <% } %>
        <div class="card-body">
          <h5 class="card-title">
            <strong>Name:</strong> <%= teacher.firstName %>&nbsp;<%=
            teacher.lastName %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= teacher.subject %></h6>
          <p class="card-text"><%= teacher.bio %></p>

          <div class="mt-3">
            <p class="mb-2">
              <strong>Qualifications:</strong> <%= teacher.qualification %>
            </p>
            <p class="mb-2">
              <strong>Experience:</strong> <%= teacher.experience %>
            </p>
            <p class="mb-2">
              <strong>Specialization:</strong> <%= teacher.specialization %>
            </p>

            <% if (teacher.achievements && teacher.achievements.length > 0) { %>
            <div class="mt-3">
              <strong>Achievements:</strong>
              <ul class="list-unstyled">
                <% teacher.achievements.forEach(achievement => { %>
                <li>
                  <i class="fas fa-trophy text-warning me-2"></i><%= achievement
                  %>
                </li>
                <% }); %>
              </ul>
            </div>
            <% } %>
          </div>
        </div>
        <div class="card-footer bg-transparent">
          <small class="text-muted">
            <div><i class="fas fa-envelope me-2"></i><%= teacher.email %></div>
            <% if (teacher.phone) { %>
            <div class="mt-1">
              <i class="fas fa-phone me-2"></i><%= teacher.phone %>
            </div>
            <% } %>
          </small>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<%- include('../partials/footer') %>
