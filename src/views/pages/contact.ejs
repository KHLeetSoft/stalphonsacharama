    <!-- Contact Information -->
    <div class="col-md-4 mb-4">
      <!-- <div class="card h-100 shadow-sm"> -->
        <div class="card-body p-4">
          <h3 class="text-center mb-4">Feel free to contact us</h3>
          <% if (contactInfo) { %>
          <div class="card h-20 shadow-sm">
            <div class="text-center mb-4">
              <div class="d-inline-block p-3 rounded-circle bg-light mb-3">
                <i class="fas fa-envelope fa-2x text-primary"></i>
              </div>
              <p class="mb-2"><%= contactInfo.email %></p>
            </div>
          </div>
          &nbsp;

          <div class="card h-20 shadow-sm">
            <div class="text-center mb-4">
              <div class="d-inline-block p-3 rounded-circle bg-light mb-3">
                <i class="fas fa-phone fa-2x text-primary"></i>
              </div>
              <p class="mb-2">Reception: <%= contactInfo.Reception %></p>
              <p class="mb-2">Accounts: <%= contactInfo.Accounts %></p>
              <p class="mb-2">Transport: <%= contactInfo.Transport %></p>
            </div>
          </div>
          &nbsp;
          <div class="card h-20 shadow-sm">
            <div class="text-center mb-4">
              <div class="d-inline-block p-3 rounded-circle bg-light mb-3">
                <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
              </div>
              <p class="mb-2"><%= contactInfo.address %></p>
            </div>
            <!-- Social Media Icons -->
            <% } else { %>
            <p class="text-center">
              Contact information will be available soon.
            </p>
            <% } %>
          </div>
        </div>
      </div>
      <!-- </div> -->
      <!-- Contact Form -->
      <div class="col-md-8 mb-4">
        <!-- <div class="card h-100"> -->
          <div class="card-body">
            <h3 class="card-title mb-4">Send us a Message</h3>
            <form id="contactForm">
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  id="subject"
                  name="subject"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea
                  class="form-control"
                  id="message"
                  name="message"
                  rows="5"
                  required
                ></textarea>
              </div>
              <button type="submit" class="btn btn-primary">
                Send Message
              </button>
            </form>
          </div>
        <!-- </div> -->
      </div>
    </div>
  </div>

