<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4"><%= program.title %></h1>
    </div>
  </div>
  <div class="row">
    <% if (program.image) { %>
    <div class="col-md-5">
      <div class="image-container" style="max-height: 300px; overflow: hidden">
        <img
          src="<%= program.image %>"
          class="img-fluid rounded shadow"
          alt="<%= program.title %>"
          style="width: 100%; height: 100%; object-fit: cover"
        />
      </div>
    </div>
    <% } %>
    <div class="col-md-<%= program.image ? '7' : '12' %>">
      <div class="content">
        <%- program.description %> <% if (program.duration) { %>
        <div class="mt-4">
          <h4>Duration:</h4>
          <p><%= program.duration %></p>
        </div>
        <% } %> <% if (program.requirements) { %>
        <div class="mt-4">
          <h4>Requirements:</h4>
          <p><%- program.requirements %></p>
        </div>
        <% } %> <% if (program.curriculum) { %>
        <div class="mt-4">
          <h4>Curriculum:</h4>
          <p><%- program.curriculum %></p>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
