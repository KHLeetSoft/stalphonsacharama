<%- include('../partials/header') %>

<div class="container mt-5">
  <h1 class="text-center mb-4">admission Opportunities</h1>

  <% if (admissions && admissions?.length > 0) { %>
  <div class="row">
    <% admissions?.forEach(admission? => { %>
    <div class="col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <h3 class="card-title"><%= admission?.title %></h3>
            <span class="badge bg-success">Open</span>
          </div>

          <p class="card-text"><%= admission?.description %></p>

          <div class="mb-3">
            <h5>Requirements:</h5>
            <ul>
              <% admission?.requirements.forEach(requirement => { %>
              <li><%= requirement %></li>
              <% }) %>
            </ul>
          </div>

          <div class="mb-3">
            <h5>Application Process:</h5>
            <div class="timeline">
              <% admission?.applicationProcess.forEach((process, index) => { %>
              <div class="timeline-item">
                <div class="timeline-badge"><%= index + 1 %></div>
                <div class="timeline-content">
                  <h6><%= process?.step %></h6>
                  <p><%= process?.description %></p>
                </div>
              </div>
              <% }) %>
            </div>
          </div>

          <div class="card-footer bg-transparent border-0">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <strong>Application Fee:</strong> $<%= admission?.fees?.toFixed(2)
                %>
              </div>
              <div>
                <strong>Deadline:</strong> <%= new
                Date(admission?.deadline)?.toLocaleDateString() %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div class="alert alert-info text-center">
    No admission? opportunities are currently available. Please check back later.
  </div>
  <% } %>
</div>

<style>
  .timeline {
    position: relative;
    padding: 20px 0;
  }

  .timeline-item {
    position: relative;
    padding-left: 50px;
    margin-bottom: 20px;
  }

  .timeline-badge {
    position: absolute;
    left: 0;
    width: 30px;
    height: 30px;
    background: #007bff;
    border-radius: 50%;
    color: white;
    text-align: center;
    line-height: 30px;
  }

  .timeline-content {
    padding: 10px;
    background: #f8f9fa;
    border-radius: 4px;
  }
</style>

<%- include('../partials/footer') %>
