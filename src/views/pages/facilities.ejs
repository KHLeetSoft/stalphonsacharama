<%- include('../partials/header') %>

<!-- Hero Section -->
<section class="hero-section py-5 bg-primary text-white">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h1 class="display-4 mb-4">
          <i class="fas fa-building me-3"></i>Our Facilities
        </h1>
        <p class="lead">Discover the world-class facilities that make our school a premier educational institution</p>
      </div>
    </div>
  </div>
</section>

<!-- Facilities Grid -->
<div class="container mt-5">
  <div class="row">
    <% facilities.forEach(facility => { %>
      <div class="col-lg-4 col-md-6 mb-5">
        <div class="card facility-card h-100 shadow-lg border-0">
          <% if (facility.imageUrl) { %>
            <div class="facility-image-wrapper">
              <img src="<%= facility.imageUrl %>" class="card-img-top facility-image" alt="<%= facility.title %>">
              <div class="facility-overlay">
                <i class="fas fa-eye"></i>
              </div>
            </div>
          <% } %>
          <div class="card-body p-4">
            <div class="facility-icon mb-3">
              <i class="fas fa-star text-warning"></i>
            </div>
            <h5 class="card-title fw-bold mb-3"><%= facility.title %></h5>
            <p class="card-text text-muted"><%= facility.description %></p>
            
            <!-- Facility Features -->
            <% if (facility.features && facility.features.length > 0) { %>
              <div class="facility-features mt-3">
                <h6 class="text-primary mb-2">Key Features:</h6>
                <ul class="list-unstyled">
                  <% facility.features.forEach(feature => { %>
                    <li class="mb-1">
                      <i class="fas fa-check-circle text-success me-2"></i>
                      <%= feature %>
                    </li>
                  <% }) %>
                </ul>
              </div>
            <% } %>
            
            <!-- Facility Status -->
            <div class="facility-status mt-3">
              <% if (facility.isActive) { %>
                <span class="badge bg-success">
                  <i class="fas fa-check-circle me-1"></i>Available
                </span>
              <% } else { %>
                <span class="badge bg-secondary">
                  <i class="fas fa-clock me-1"></i>Under Maintenance
                </span>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  
  <!-- No Facilities Message -->
  <% if (!facilities || facilities.length === 0) { %>
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>
          No facilities have been added yet. Please check back later or contact the administration.
        </div>
      </div>
    </div>
  <% } %>
</div>

<!-- Facilities Overview Section -->
<section class="facilities-overview py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <h3 class="mb-4">Why Choose Our Facilities?</h3>
        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="d-flex align-items-start">
              <div class="feature-icon me-3">
                <i class="fas fa-shield-alt text-primary fa-2x"></i>
              </div>
              <div>
                <h5>Safety First</h5>
                <p class="text-muted">All our facilities are designed with student safety as the top priority.</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <div class="d-flex align-items-start">
              <div class="feature-icon me-3">
                <i class="fas fa-cogs text-primary fa-2x"></i>
              </div>
              <div>
                <h5>Modern Equipment</h5>
                <p class="text-muted">State-of-the-art equipment and technology in all our facilities.</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <div class="d-flex align-items-start">
              <div class="feature-icon me-3">
                <i class="fas fa-users text-primary fa-2x"></i>
              </div>
              <div>
                <h5>Expert Staff</h5>
                <p class="text-muted">Qualified professionals maintain and operate all facilities.</p>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <div class="d-flex align-items-start">
              <div class="feature-icon me-3">
                <i class="fas fa-clock text-primary fa-2x"></i>
              </div>
              <div>
                <h5>Regular Maintenance</h5>
                <p class="text-muted">All facilities undergo regular maintenance and updates.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card border-0 shadow-lg">
          <div class="card-body p-4">
            <h4 class="card-title mb-3">Facility Statistics</h4>
            <div class="stat-item mb-3">
              <div class="d-flex justify-content-between">
                <span>Total Facilities</span>
                <span class="fw-bold text-primary"><%= facilities ? facilities.length : 0 %></span>
              </div>
            </div>
            <div class="stat-item mb-3">
              <div class="d-flex justify-content-between">
                <span>Available</span>
                <span class="fw-bold text-success">
                  <%= facilities ? facilities.filter(f => f.isActive).length : 0 %>
                </span>
              </div>
            </div>
            <div class="stat-item mb-3">
              <div class="d-flex justify-content-between">
                <span>Under Maintenance</span>
                <span class="fw-bold text-warning">
                  <%= facilities ? facilities.filter(f => !f.isActive).length : 0 %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %> 