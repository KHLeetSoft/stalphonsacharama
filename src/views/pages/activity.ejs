<%- include('../partials/header') %>

<div class="container my-5">
  <h1 class="text-center mb-5">Extracurricular Activities</h1>

  <div class="row g-4">
    <% activities?.forEach(activity => { %>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <% if (activity?.image) { %>
        <img
          src="<%= activity?.image %>"
          class="card-img-top"
          alt="<%= activity?.title %>"
          style="height: 200px; object-fit: cover"
        />
        <% } else { %>
        <div
          class="bg-light"
          style="
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
          "
        >
          <i class="fas fa-activities fa-3x text-muted"></i>
        </div>
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= activity?.title %></h5>
          <p class="card-text text-muted">
            <small><%= activity?.category %></small>
          </p>
          <p class="card-text">
            <%= activity?.description.substring(0, 150) %>...
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
              <i class="far fa-clock me-1"></i>
              <%= activity?.schedule %>
            </small>
            <a href="/activity?/<%= activity?._id %>">Learn More</a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/footer') %>
