<%- include('../layouts/admin', { title: 'Manage School Logo' ,content: `
<div class="container-fluid px-4">
  ${typeof error !== 'undefined' && error ? `
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>${error}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  ` : ''} ${typeof success !== 'undefined' && success ? `
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="bi bi-check-circle-fill me-2"></i>${success}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  ` : ''}
  <div class="card my-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="m-0">Manage School Logo</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 border-end">
          <h5 class="mb-4">Current Logo Preview</h5>
          <div class="text-center p-4 bg-light rounded mb-4">
            <img
              src="${logo ? logo.logoUrl : '/uploads/default-logo.png'}"
              alt="School Logo"
              class="img-fluid"
              style="max-height: 200px; object-fit: contain"
            />
          </div>
        </div>
        <div class="col-md-6">
          <h5 class="mb-4">Upload New Logo</h5>
          <form
            action="/admin/logo/update"
            method="POST"
            enctype="multipart/form-data"
            class="p-4 bg-light rounded"
          >
            <div class="mb-4">
              <label for="logo" class="form-label fw-bold"
                >Select Image File</label
              >
              <input
                type="file"
                class="form-control form-control-lg"
                id="logo"
                name="logo"
                accept=".png"
                required
              />
              <div class="form-text text-muted mt-2">
                <i class="bi bi-info-circle me-1"></i>
                Supported format: PNG only
              </div>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-cloud-upload me-2"></i>Update Logo
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
`}) %>
