<%- include('../layouts/admin', {
  title: title,
  style: '',
  script: '',
  content: `
<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Teachers</h2>
    <a href="/admin/teachers/add" class="btn btn-primary">
      <i class="fas fa-plus"></i> Add New Teacher
    </a>
  </div>
  <h2>Teachers</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Subject</th>
        <!-- other columns -->
      </tr>
    </thead>
    <tbody>
      ${
        teachers.map(teacher => `
          <tr>
            <td>${teacher.name}</td>
            <td>${teacher.subject}</td>
            <!-- other columns -->
          </tr>
        `).join('')
      }
    </tbody>
  </table>
</div>
` }) %>
