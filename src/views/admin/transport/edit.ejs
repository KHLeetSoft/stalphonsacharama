<%- include('../layouts/admin', { title: 'Edit Transport' , content: ` <div class="container mt-4">
  <h2>Edit Transport</h2>
  <form action="/admin/transport/edit/${transport._id}" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="vehicleImage">Vehicle Image</label>
      ${transport.vehicleImage ? `
      <img src="${transport.vehicleImage}" alt="Vehicle"
        style="max-width:100px;max-height:60px;display:block;margin-bottom:10px;" />
      ` : ''}
      <input type="file" name="vehicleImage" id="vehicleImage" class="form-control" accept="image/*">
    </div>
    <div class="form-group">
      <label for="rules">Rules</label>
      <textarea name="rules" id="rules" class="form-control" rows="3">${transport.rules}</textarea>
    </div>
    <div class="form-group">
      <label for="time">Time</label>
      <input type="text" name="time" id="time" class="form-control" value="${transport.time}">
    </div>
    <div class="form-group">
      <label for="driverName">Driver Name</label>
      <input type="text" name="driverName" id="driverName" class="form-control" value="${transport.driverName}">
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
  </form>
  </div>
  `
  }) %>