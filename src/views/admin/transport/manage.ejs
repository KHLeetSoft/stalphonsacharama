<%- include('../layouts/admin', { title: 'Manage Transport' , content: `
<div class="container mt-4">
  <h2>Manage Transport</h2>
  <a href="/admin/transport/add" class="btn btn-success mb-3">Add Transport</a>
  <!-- ${error ? `<div class="alert alert-danger">${error}</div>` : ''} -->
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Vehicle Image</th>
        <th>Rules</th>
        <th>Time</th>
        <th>Driver Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      ${transports.map(transport => `
      <tr>
        <td>
          ${transport.vehicleImage ? `<img
            src="${transport.vehicleImage}"
            alt="Vehicle"
            style="max-width: 100px; max-height: 60px"
          />` : ''}
        </td>
        <td>${transport.rules}</td>
        <td>${transport.time}</td>
        <td>${transport.driverName}</td>
        <td>
          <a
            href="/admin/transport/edit/${transport._id}"
            class="btn btn-primary btn-sm"
            >Edit</a
          >
          <form
            action="/admin/transport/delete/${transport._id}"
            method="POST"
            style="display: inline"
          >
            <button
              type="submit"
              class="btn btn-danger btn-sm"
              onclick="return confirm('Delete this transport entry?');"
            >
              Delete
            </button>
          </form>
        </td>
      </tr>
      `).join('')}
    </tbody>
  </table>
</div>
` }) %>
