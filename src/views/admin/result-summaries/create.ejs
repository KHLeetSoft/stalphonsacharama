        <div class="row mb-4">
          <div class="col-12">
            <h4 class="border-bottom pb-2">Student Statistics</h4>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-3">
            <label for="totalStudents" class="form-label">Total Students *</label>
            <input type="number" class="form-control" id="totalStudents" name="totalStudents" min="0" required>
          </div>
          <div class="col-md-3">
            <label for="appearedStudents" class="form-label">Appeared Students *</label>
            <input type="number" class="form-control" id="appearedStudents" name="appearedStudents" min="0" required>
          </div>
          <div class="col-md-3">
            <label for="passedStudents" class="form-label">Passed Students *</label>
            <input type="number" class="form-control" id="passedStudents" name="passedStudents" min="0" required>
          </div>
          <div class="col-md-3">
            <label for="passPercentage" class="form-label">Pass Percentage</label>
            <input type="text" class="form-control" id="passPercentage" readonly>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-3">
            <label for="distinctionStudents" class="form-label">Distinction Students</label>
            <input type="number" class="form-control" id="distinctionStudents" name="distinctionStudents" min="0" value="0">
          </div>
          <div class="col-md-3">
            <label for="firstDivisionStudents" class="form-label">First Division</label>
            <input type="number" class="form-control" id="firstDivisionStudents" name="firstDivisionStudents" min="0" value="0">
          </div>
          <div class="col-md-3">
            <label for="secondDivisionStudents" class="form-label">Second Division</label>
            <input type="number" class="form-control" id="secondDivisionStudents" name="secondDivisionStudents" min="0" value="0">
          </div>
          <div class="col-md-3">
            <label for="thirdDivisionStudents" class="form-label">Third Division</label>
            <input type="number" class="form-control" id="thirdDivisionStudents" name="thirdDivisionStudents" min="0" value="0">
          </div>
        </div>

        <!-- Score Statistics -->
        <div class="row mb-4">
          <div class="col-12">
            <h4 class="border-bottom pb-2">Score Statistics</h4>
          </div>
