    <h2>Add New Result Summary</h2>
    <a href="/admin/result-summaries" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Back to List
    </a>
  </div>

  <div class="card">
    <div class="card-body">
      <form method="POST" action="/admin/result-summaries/create">
        <!-- Basic Information -->
        <div class="row mb-4">
          <div class="col-12">
            <h4 class="border-bottom pb-2">Basic Information</h4>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
