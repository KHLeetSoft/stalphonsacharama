<%# =========================
    ADMIN ABOUT EDIT PAGE
    Lets admin update About, Mission, Vision, and History
    Used for both public and public-facing vision-mission pages
    ========================= %>  ///// this is about pages
<%- include('../layouts/admin', { title: 'Edit About Content', style: '',
script: '', content: `
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Edit About Content</h3>
        </div>
        <div class="card-body">
          <div id="alert-container"></div>

          <form
            id="aboutForm"
            action="/admin/about/update"
            method="POST"
            enctype="multipart/form-data"
          >
            <!-- Image Upload Section -->
            <div class="card mb-4">
              <div class="card-header">
                <h4>About Page Image</h4>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label class="form-label">Upload New Image</label>
                      <input
                        type="file"
                        class="form-control"
                        name="image"
                        accept="image/*"
                      />
                      <small class="text-muted"
                        >Recommended size: 1200x800px. Max file size: 2MB</small>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label class="form-label">Current Image</label>
                      <div class="current-image-container">
                        ${about && about.image ? `
                        <img
                          src="${about.image}"
                          alt="Current About Image"
                          class="img-fluid rounded"
                          style="
                            max-height: 200px;
                            width: 100%;
                            object-fit: cover;
                          "
                        />
                        <div class="mt-2">
                          <a
                            href="${about.image}"
                            target="_blank"
                            class="btn btn-sm btn-info"
                          >
                            <i class="fas fa-eye me-1"></i>View Full Image
                          </a>
                        </div>
                        ` : `
                        <div class="alert alert-info">
                          <i class="fas fa-info-circle me-2"></i>No image
                          uploaded yet
                        </div>
                        `}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Mission Section (public & admin) -->
            <div class="card mb-4">
              <div class="card-header">
                <h4>Mission Statement</h4>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label class="form-label">Mission Title</label>
                  <input
                    type="text"
                    class="form-control"
                    name="missionTitle"
                    value="${typeof missionTitle !== 'undefined' ? missionTitle : ''}"
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">Mission Content</label>
                  <textarea
                    class="form-control"
                    name="missionContent"
                    rows="5"
                  >
${typeof missionContent !== 'undefined' ? missionContent : ''}</textarea>
                </div>
              </div>
            </div>

            <!-- Vision Section (public & admin) -->
            <div class="card mb-4">
              <div class="card-header">
                <h4>Vision Statement</h4>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label class="form-label">Vision Title</label>
                  <input
                    type="text"
                    class="form-control"
                    name="visionTitle"
                    value="${typeof visionTitle !== 'undefined' ? visionTitle : ''}"
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">Vision Content</label>
                  <textarea
                    class="form-control"
                    name="visionContent"
                    rows="5"
                  >
${typeof visionContent !== 'undefined' ? visionContent : ''}</textarea>
                </div>
              </div>
            </div>

            <!-- History Section (public & admin) -->
            <div class="card mb-4">
              <div class="card-header">
                <h4>About description</h4>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <label class="form-label">About Title</label>
                  <input
                    type="text"
                    class="form-control"
                    name="historyTitle"
                    value="${typeof historyTitle !== 'undefined' ? historyTitle : ''}"
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">About Content</label>
                  <textarea
                    class="form-control"
                    name="historyContent"
                    rows="5"
                    required
                  >
${typeof historyContent !== 'undefined' ? historyContent : ''}</textarea>
                </div>
              </div>
            </div>

            <!-- Save Button -->
            <div class="row mt-4">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-end">
                      <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
` }) %>
